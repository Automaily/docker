SHOW TABLES;
DESCRIBE sakila_film;
SELECT * FROM sakila_film;
SELECT * FROM sakila_film WHERE MATCH('Emotional drama');
SELECT * FROM sakila_film WHERE MATCH('Emotional drama -dog -shark');
SELECT * FROM sakila_film WHERE MATCH('Emotional drama') GROUP BY release_year;
SELECT * FROM sakila_film WHERE MATCH('Emotional drama') FACET release_year FACET category_id;
SELECT * FROM sakila_film WHERE MATCH('" shark  monkey  boy robot "/2');
SELECT title,HIGHLIGHT({},'description') FROM sakila_film WHERE MATCH('"shark monkey boy robot"/2');
SELECT *  FROM sakila_film WHERE MATCH('"shark monkey boy robot"/2') AND release_year IN(2006,2007) AND rental_rate BETWEEN 2.0 and 3.0;
